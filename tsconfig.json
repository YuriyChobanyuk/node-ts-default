{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2017",
    "removeComments": false,
    "preserveConstEnums": true,
    "noLib": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": false,
    "types": [
      "reflect-metadata"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "lib",
    "tests",
    "@types",
    "unit-tests",
    "client",
    "prettier.config.js",
    "ecosystem.config.js"
  ]
}